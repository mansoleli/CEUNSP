<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gerenciador.CadastroAdm" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Cadastro Administrador" />

    <TextView
        android:id="@+id/lbl_NomeAdm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:text="Nome Administrador" />

    <TextView
        android:id="@+id/lbl_SenhaAdm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_NomeAdm"
        android:layout_below="@+id/txt_NomeAdm"
        android:layout_marginTop="20dp"
        android:text="Senha Administrador" />

    <EditText
        android:id="@+id/txt_SenhaAdm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lbl_SenhaAdm"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txt_NomeAdm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_NomeAdm"
        android:layout_below="@+id/lbl_NomeAdm"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/Btn_Cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_SenhaAdm"
        android:layout_below="@+id/txt_SenhaAdm"
        android:onClick="IrparaTelaLoginAdm"
        android:text="Cadastrar" />

    <Button
        android:id="@+id/Btn_Cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Btn_Cadastro"
        android:layout_alignBottom="@+id/Btn_Cadastro"
        android:layout_toRightOf="@+id/lbl_NomeAdm"
        android:text="Cancelar" />

</RelativeLayout>